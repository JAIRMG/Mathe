<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.alex.helyer.mathe.GradoDiagnosticoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Selecciona tu grado escolar:" />

    <Button
        android:id="@+id/btnDiagnosticoPrimero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:text="primero"/>

    <Button
        android:id="@+id/btnDiagnosticoSegundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:text="segundo"/>

    <Button
        android:id="@+id/btnDiagnosticoTercero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:text="tercero"/>

</LinearLayout>
